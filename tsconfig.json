{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "es5",
        "lib": [
            "es5",
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "types": [
            "cypress",
            "react/next",
            "react-dom/next"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "checkJs": false
    },
    "noImplicitAny": false,
    "include": [
        "src",
        "**/*.ts"
    ],
    "exclude": [
        "cypress"
    ],
    "typeRoots": [
        "../node_modules/@types",
        "../@types"
    ]
}